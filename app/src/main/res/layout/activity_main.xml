<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lbTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Proyecto numero 1 "
        android:textColor="#4F4E4E"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:text="Equipo : Carlos alfonso barron rivera, Luis Jorge Guadarrama Hidalgo, Edgar Uriel Alvarez Alvarez,Jean michell Serna Caballero " />


    <TextView
    android:id="@+id/lblConexion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:text="Sin conexiÃ³n"
    android:textSize="16sp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lblCpacitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="24dp"
            android:text="Capacitancia"
            android:textColor="#343434"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblRPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:text="RPM"
            android:textColor="#343434"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCapacitor"
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="105dp"
            android:scaleType="fitCenter"
            android:src="@drawable/capacitor1"
            app:layout_constraintBottom_toTopOf="@+id/lblCpacitorResultado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblCpacitor" />

        <TextView
            android:id="@+id/lblCpacitorResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginBottom="16dp"
            android:text="Capacitancia: "
            android:textColor="#343434"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imgRPM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="108dp"
            android:scaleType="fitCenter"
            android:src="@drawable/helice"
            app:layout_constraintBottom_toTopOf="@+id/lblRPMResultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblRPM" />

        <TextView
            android:id="@+id/lblRPMResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="61dp"
            android:layout_marginRight="61dp"
            android:layout_marginBottom="16dp"
            android:text="RPM: "
            android:textColor="#343434"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>